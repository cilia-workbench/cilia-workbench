<ipojo xmlns:cilia="fr.liglab.adele.cilia">

	<processor name="HelloProcessor"
		classname="fr.liglab.adele.cilia.components.mediators.HelloProcessor">
		<method name="sayHelloPeriodic" data.type="fr.liglab.adele.cilia.Data" />
		<properties>
			<property name="header" method="setHeader" value="-" />
		</properties>
	</processor>

	<mediator-component name="mediator-monitor-actuator"
		category="samples">
		<scheduler name="counter-scheduler" />
		<processor name="HelloProcessor" />
		<dispatcher name="multicast-dispatcher" />
	</mediator-component>

	<scheduler name="scheduler.name" classname="scheduler.implementation.class"
		namespace="scheduler.namespace">
	</scheduler>

	<dispatcher name="dispatcher.name" classname="dispatcher.implementation.class"
		namespace="dispatcher.namespace">
	</dispatcher>

	<collector name="collector.name" classname="collector.implementation.class"
		namespace="collector.namespace">
	</collector>

	<sender name="sender.name" classname="sender.implementation.class"
		namespace="sender.namespace">
	</sender>

	<adapter name="adapter.name" pattern="in-only">
		<collector type="collector.name" />
	</adapter>

</ipojo>