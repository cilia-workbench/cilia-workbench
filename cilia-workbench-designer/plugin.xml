<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="fr.liglab.adele.cilia.workbench.common.preferencePage.CiliaRootPreferencePage"
            class="fr.liglab.adele.cilia.workbench.designer.preferencePage.CiliaDesignerPreferencePage"
            id="fr.liglab.adele.cilia.workbench.designer.preferencePage.CiliaDesignerPreferencePage"
            name="Cilia Designer">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="fr.liglab.adele.cilia.workbench.designer.rootCategory"
            class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.JarRepositoryView"
            icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/repo.png"
            id="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview"
            name="Jar repository"
            restorable="true">
      </view>
      <category
            id="fr.liglab.adele.cilia.workbench.designer.rootCategory"
            name="CILIA Designer">
      </category>
      <view
            category="fr.liglab.adele.cilia.workbench.designer.rootCategory"
            class="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview.DsciliaRepositoryView"
            icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/repo.png"
            id="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview"
            name="Dscilia repository"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.reload"
            name="Reload Jar repository">
      </command>
      <command
            id="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview.reload"
            name="Reload Dscilia repository">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:fr.liglab.adele.cilia.workbench.designer.jarrepositoryview">
         <command
               commandId="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.reload"
               icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/reload.png"
               label="Reload Jar repository"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview">
         <command
               commandId="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview.reload"
               icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/reload.png"
               label="Reload Dscilia repository"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.ReloadHandler"
            commandId="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.reload">
      </handler>
      <handler
            class="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview.ReloadHandler"
            commandId="fr.liglab.adele.cilia.workbench.designer.dsciliarepositoryview.reload">
      </handler>
   </extension>
   <extension point="org.eclipse.core.runtime.adapters">
      <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Adapter" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Bundle" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Collector" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Dispatcher" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.MediatorComponent" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Processor" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Scheduler" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
      
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.parser.metadata.Sender" class="fr.liglab.adele.cilia.workbench.designer.jarrepositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>      
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
         
         
         
	<file-association
       content-type="org.eclipse.core.runtime.xml"
       file-extensions="dscilia"/>
         
         
         
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="fr.liglab.adele.cilia.workbench.designer.perspective.DefaultPerspective"
            id="fr.liglab.adele.cilia.workbench.designer.perspective.defaultperspective"
            name="Cilia designer">
      </perspective>
   </extension>
</plugin>
