<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="fr.liglab.adele.cilia.workbench.common.preferencePage.CiliaRootPreferencePage"
            class="fr.liglab.adele.cilia.workbench.designer.preferencePage.CiliaDesignerPreferencePage"
            id="fr.liglab.adele.cilia.workbench.designer.preferencePage.CiliaDesignerPreferencePage"
            name="Cilia Designer">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="fr.liglab.adele.cilia.workbench.designer.rootCategory"
            class="fr.liglab.adele.cilia.workbench.designer.repositoryview.RepositoryView"
            icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/repo.png"
            id="fr.liglab.adele.cilia.workbench.designer.repositoryview"
            name="Repository view"
            restorable="true">
      </view>
      <category
            id="fr.liglab.adele.cilia.workbench.designer.rootCategory"
            name="CILIA Designer">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="fr.liglab.adele.cilia.workbench.designer.repositoryview.reload"
            name="Reload repository">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:fr.liglab.adele.cilia.workbench.designer.repositoryview">
         <command
               commandId="fr.liglab.adele.cilia.workbench.designer.repositoryview.reload"
               icon="platform:/plugin/fr.liglab.adele.cilia.workbench.common/icons/16/reload.png"
               label="Reload repository"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.liglab.adele.cilia.workbench.designer.repositoryview.ReloadHandler"
            commandId="fr.liglab.adele.cilia.workbench.designer.repositoryview.reload">
      </handler>
   </extension>
   <extension point="org.eclipse.core.runtime.adapters">
      <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Adapter" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Bundle" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Collector" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Dispatcher" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.MediatorComponent" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Processor" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Scheduler" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>
      
            <factory adaptableType="fr.liglab.adele.cilia.workbench.designer.metadataparser.Sender" class="fr.liglab.adele.cilia.workbench.designer.repositoryview.propertyview.PropertiesAdapter">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource"></adapter>
      </factory>      
   </extension>
</plugin>
