<ipojo xmlns:cilia="fr.liglab.adele.cilia">

	<processor name="BasicProcessor"
		classname="fr.liglab.adele.cilia.components.mediators.BasicProcessor">
		<cilia:method name="sayHello" data.type="fr.liglab.adele.cilia.Data" />
	</processor>

	<mediator-component name="basic-mediator" category="samples">
		<cilia:processor name="BasicProcessor" />
		<cilia:scheduler name="immediate-scheduler" />
		<cilia:dispatcher name="multicast-dispatcher" />
	</mediator-component>

	<collector name="basic-collector"
		classname="fr.liglab.adele.cilia.components.collectors.BasicCollector">
		<callback transition="validate" method="start"/>
	</collector>

	<sender name="basic-sender"
		classname="fr.liglab.adele.cilia.components.senders.BasicSender">
	</sender>

	<adapter name="basic-in-adapter" pattern="in-only">
		<collector type="basic-collector" />
	</adapter>

	<adapter name="basic-out-adapter" pattern="out-only">
		<sender type="basic-sender" />
	</adapter>


</ipojo>