http://blog.eclipse-tips.com/2008/11/creating-custom-marker-view.html
http://www.linuxtopia.org/online_books/eclipse_documentation/eclipse_platform_plug-in_developer_guide/topic/org.eclipse.platform.doc.isv/guide/eclipse_platform_plugin_resAdv_markers.htm


		IWorkspace workspace = ResourcesPlugin.getWorkspace();

		try {
			IMarker marker = workspace.getRoot().createMarker(IMarker.PROBLEM);
			marker.setAttribute(IMarker.MESSAGE, "hello world transient");
			marker.setAttribute(IMarker.SEVERITY, IMarker.SEVERITY_ERROR);
			marker.setAttribute(IMarker.TRANSIENT, true);
			marker.setAttribute(IMarker.LOCATION, "here is the marker !");

			// marker.setAttribute(IMarker.p, "titi");
			// marker.setAttribute(IMarker.LINE_NUMBER, lineNumber);
		} catch (CoreException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		try {
			IMarker[] a = workspace.getRoot().findMarkers(IMarker.PROBLEM, true, IResource.DEPTH_INFINITE);

			for (IMarker m : a) {
				System.out.println(m.getId());
				for (String attr : m.getAttributes().keySet())
					System.out.println("--> " + attr);
			}

		} catch (CoreException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		